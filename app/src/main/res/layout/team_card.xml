<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/team_cardview"
        android:layout_width="384dp"
        android:layout_height="115dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="384dp"
            android:layout_height="115dp">

            <ImageView
                android:id="@+id/img_playerone"
                android:layout_width="102dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="295dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/team_player_1" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="40dp"
                android:layout_height="19dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="314dp"
                android:background="@drawable/gray_ractangle"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="IRE"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_playerone" />

            <TextView
                android:id="@+id/txt_playerone_name"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="220dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="left"
                android:text="Gary Wilson"
                android:textColor="#626262 "
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_playerone"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_points"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/roboto"
                android:text="Points"
                android:textColor="#626262"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/img_playerone"
                app:layout_constraintTop_toBottomOf="@+id/txt_playerone_name" />

            <TextView
                android:id="@+id/txt_gained_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/roboto"
                android:gravity="left"
                android:text="89.5"
                android:textColor="#626262"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/txt_points"
                app:layout_constraintTop_toBottomOf="@+id/txt_playerone_name" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="39dp"
                android:background="?android:attr/listDivider"
                android:outlineSpotShadowColor="#7F8C99"
                app:layout_constraintStart_toEndOf="@+id/txt_gained_points"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_credits"
                android:layout_width="55dp"
                android:layout_height="19dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="128dp"
                android:fontFamily="@font/roboto"
                android:gravity="left"
                android:text="Credits"
                android:textColor="#626262"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_gained_credits"
                android:layout_width="30dp"
                android:layout_height="19dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/roboto"
                android:text="10.0"
                android:textColor="#626262"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/txt_credits"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_not_confired"
                android:layout_width="105dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/not_confirmed_light_grey"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="Not Confirmed"
                android:textColor="#626262"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/img_playerone"
                app:layout_constraintTop_toBottomOf="@+id/txt_points" />


            <ImageView
                android:id="@+id/team_minus_icon"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="36dp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/txt_gained_credits"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/team_minus_image" />

            <ImageView

                android:id="@+id/img_plus_icon"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:foregroundGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txt_gained_credits"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/team_plus_icon"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>