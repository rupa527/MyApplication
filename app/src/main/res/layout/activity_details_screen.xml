<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="firstStrong"
    tools:context=".DetailsScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_outline_arrow_back_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="126dp"
            android:layout_height="21dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:text="IRE vs  RSA"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/arrow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_giftbox_card2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ouch" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_notifications_none_24" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="91dp"
            android:layout_height="12dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:text="20h 18m left"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/arrow"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cntst"
            android:layout_width="103dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/red_rectangle"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Contests"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/joined"
            android:layout_width="110dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_rectangle"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Joined"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/cntst"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/teams"
            android:layout_width="110dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_rectangle"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="My Teams"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/joined"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="Sort by"
            android:textColor="#E6214E"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cntst" />

        <TextView
            android:id="@+id/entry"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/shadow"
            android:elevation="30dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Entry"
            android:textColor="#626262"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/cntst" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/shadow"
            android:elevation="30dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Contest Size"
            android:textColor="#626262"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/entry"
            app:layout_constraintTop_toBottomOf="@+id/joined" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Filter"
            android:textColor="#626262"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/teams" />

        <ImageView
            android:id="@+id/image_giftbox_card3"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/teams"
            app:srcCompat="@drawable/ic_baseline_filter_list_24" />

        <TextView
            android:id="@+id/all"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/shadow"
            android:elevation="30dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="All"
            android:textColor="#626262"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="118dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/shadow"
            android:backgroundTint="#D8D8D8"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Guranteed contest"
            android:textColor="#626262"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/all"
            app:layout_constraintTop_toBottomOf="@+id/entry" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/shadow"
            android:backgroundTint="#D8D8D8"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="5- Way Contest "
            android:textColor="#626262"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/shadow"
            android:backgroundTint="#D8D8D8"
            android:gravity="center"
            android:text="3- Way Contest "
            android:textColor="#626262"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Guranteed contest"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/all" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="70dp"
            android:layout_height="19dp"
            android:layout_marginStart="151dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="View All"
            android:textColor="#626262"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <ImageView
            android:id="@+id/image_giftbox_card4"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detailrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:listitem="@layout/detailcard" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>