<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Create_teams">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_creat_team"
            android:layout_width="120dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Create Team"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/bck_arrow"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img_clock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:gravity="left"
            app:layout_constraintEnd_toStartOf="@+id/txt_count_down_timer"
            app:layout_constraintStart_toEndOf="@+id/txt_creat_team"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/clock"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/bck_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/txt_count_down_timer"
            android:layout_width="70dp"
            android:layout_height="19dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="left"
            android:text="20m 03s"
            android:textColor="#FF2D55"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_clock"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="412dp"
        android:layout_height="118dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165">

        <TextView
            android:id="@+id/txt_players"
            android:layout_width="48dp"
            android:layout_height="17dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Players"
            android:textColor="#010014"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_team1_country_name"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="56dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="IRE"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/txt_team2_country_name"
            app:layout_constraintStart_toEndOf="@+id/txt_players"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_team2_country_name"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="RUS"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/txt_team1_country_name"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_credits_left"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="13dp"
            android:gravity="center"
            android:text="Credits Left"
            android:textColor="#010014"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView

            android:id="@+id/txt_number_of_players"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="0/"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_total_number_of_players"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center|left"
            android:text="11"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_players" />

        <ImageView
            android:id="@+id/img_team1_countryflag"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/txt_total_number_of_players"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ireland" />

        <TextView
            android:id="@+id/txt_team1_score"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_team1_countryflag"
            app:layout_constraintTop_toBottomOf="@+id/txt_team1_country_name" />

        <TextView
            android:id="@+id/txt_team2_score"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txt_team1_score"
            app:layout_constraintTop_toBottomOf="@+id/txt_team2_country_name" />

        <ImageView
            android:id="@+id/img_team2_countryflag"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/txt_team2_country_name"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/russia" />

        <TextView
            android:id="@+id/txt_credit_score"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="91"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_team2_countryflag"
            app:layout_constraintTop_toBottomOf="@+id/txt_credits_left" />

        <TextView
            android:id="@+id/txt_player1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/redcircle"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

        <TextView
            android:id="@+id/txt_player2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="2"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player1"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

        <TextView
            android:id="@+id/txt_player3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="3"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player2"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

        <TextView
            android:id="@+id/txt_player4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="4"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player3"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

        <TextView
            android:id="@+id/txt_player5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="5"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player4"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />


        <TextView
            android:id="@+id/txt_player6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="6"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player5"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />


        <TextView
            android:id="@+id/txt_player7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="7"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player6"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

        <TextView
            android:id="@+id/txt_player8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="8"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player7"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

        <TextView
            android:id="@+id/txt_player9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="9"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player8"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

        <TextView
            android:id="@+id/txt_player10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="10"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player9"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

        <TextView
            android:id="@+id/txt_player11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_light_pink"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="11"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_player10"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_number_of_players" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/score_layout"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_wickets"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_rectangle"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="WK (1)"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_bat"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/light_pinkish_rectangle"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="BAT (0)"
                android:textColor="#626262"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_All"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/light_pinkish_rectangle"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="AR (0)"
                android:textColor="#626262"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_bow"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/light_pinkish_rectangle"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="BOW (0)"
                android:textColor="#626262"
                android:textSize="14sp"
                android:textStyle="normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/txt_select_wicket_keeper"
            android:layout_width="170dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="Select 1-4 Wicket Keeper"
            android:textAlignment="viewStart"
            android:textColor="#626262 "
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/score_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="290dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/team_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/team_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="406dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_continue"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/red_rectangle"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/txt_preview_team"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_preview_team"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shadow"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Preview Team"
            android:textColor="#626262"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

